<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fafafa">


        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_go_back_left_arrow"
            android:background="#fafafa"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_details"
            android:textSize="25sp"
            android:textColor="#212121"
            android:layout_margin="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="#fafafa"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text"
            android:text="@string/pick_up"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/maryland"
            android:textColor="#212121"
            android:drawableStart="@drawable/ic_circle"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/drop_off"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/herbert_macaulay"
            android:drawableStart="@drawable/ic_circle"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:drawableTint="#9ccc65"
            android:layout_marginStart="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/line"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/route"
            android:layout_marginStart="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ikeja_victoria_island"
            android:drawableStart="@drawable/ic_placeholder"
            android:drawableTint="#9ccc65"
            android:drawablePadding="12dp"
            android:layout_marginStart="8dp"/>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fafafa"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trip_fare"
            android:layout_marginStart="35dp"
            android:id="@id/text"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/text2"
            android:text="@string/n450_00"
            android:textColor="#212121"
            android:layout_below="@id/text"
            android:layout_marginStart="30dp"
            android:drawableStart="@drawable/ic_wallet"
            android:drawablePadding="8dp"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            android:text="@string/departure_time"
            android:layout_toEndOf="@id/text"
            android:layout_marginStart="150dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text4"
            android:text="@string/_12_45_pm"
            android:textColor="#212121"
            android:layout_below="@id/text3"
            android:layout_toEndOf="@id/text2"
            android:layout_marginStart="150dp"
            android:drawableStart="@drawable/ic_clock"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text5"
            android:text="@string/seats"
            android:layout_below="@id/text2"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text6"
            android:text="@string/_4_seats_available"
            android:textColor="#212121"
            android:layout_below="@id/text5"
            android:layout_marginStart="35dp"
            android:drawableStart="@drawable/ic_armchair"
            android:drawablePadding="8dp"/>





    </RelativeLayout>


</LinearLayout>